# .env.example

# Application environment
APP_ENV=production
APP_DEBUG=false

# Database
DB_HOST=localhost
DB_NAME=your_wordpress_db
DB_USER=wp_user
DB_PASS=wp_password
DB_CHARSET=utf8mb4

# Admin login
ADMIN_USER="admin"
# Use a hashed password from: password_hash('YOUR_PASSWORD', PASSWORD_DEFAULT)
ADMIN_PASS_HASH="$2y$10$EXAMPLEexampleexampleOX6"

# reCAPTCHA v3
RECAPTCHA_SITE_KEY="YOUR_RECAPTCHA_SITE_KEY"
RECAPTCHA_SECRET_KEY="YOUR_RECAPTCHA_SECRET_KEY"

# Postmark API (for batch sending)
# This is your Server API Token from Postmark
POSTMARK_SERVER_TOKEN="YOUR_POSTMARK_API_TOKEN"

# If you still want to keep an SMTP-based approach, you can set them here
SMTP_HOST="smtp.postmarkapp.com"
SMTP_PORT=587
SMTP_USER="POSTMARK_SMTP_CREDENTIAL"
SMTP_PASS="POSTMARK_SMTP_PASSWORD"

SMTP_FROM="no-reply@yourdomain.com"
SMTP_FROM_NAME="Coupons Newsletter"

# Newsletter subject template
NEWSLETTER_SUBJECT_TEMPLATE="{brandname}: Jetzt {count} neue Gutscheine f√ºr {day}. {month} {year}"

# Supervisor job times
QUEUE_TIME="4 AM"
SEND_TIME="10 AM"
