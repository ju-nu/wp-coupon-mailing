# .env.example

# Application environment
APP_ENV=production
APP_DEBUG=false

# Database
DB_HOST=localhost
DB_NAME=your_wordpress_db
DB_USER=wp_user
DB_PASS=wp_password
DB_CHARSET=utf8mb4

# Admin login
ADMIN_USER="admin"
# Use a hashed password from: password_hash('YOUR_PASSWORD', PASSWORD_DEFAULT)
ADMIN_PASS_HASH="$2y$10$EXAMPLEexampleexampleOX6"

# reCAPTCHA v3
RECAPTCHA_SITE_KEY="YOUR_RECAPTCHA_SITE_KEY"
RECAPTCHA_SECRET_KEY="YOUR_RECAPTCHA_SECRET_KEY"

# Postmark SMTP
SMTP_HOST="smtp.postmarkapp.com"
SMTP_PORT=587
SMTP_USER="YOUR_POSTMARK_ACCESS_TOKEN_OR_API_TOKEN"
SMTP_PASS="YOUR_POSTMARK_SECRET_KEY"
SMTP_FROM="no-reply@yourdomain.com"
SMTP_FROM_NAME="Coupons Newsletter"

# Newsletter subject template
NEWSLETTER_SUBJECT_TEMPLATE="{brandname}: Jetzt {count} neue Gutscheine f√ºr {day}. {month} {year}"

# Supervisor job times (not strictly used in code, but for reference)
QUEUE_TIME="4 AM"
SEND_TIME="10 AM"
